<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="software_engineering.whatnow.ListedEventActivity"
    tools:showIn="@layout/activity_listed_event">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/listed_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Brief Description"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/listed_event_pin_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_pin_drop_black_24dp"
            android:layout_below="@+id/listed_event_clock_image"
            android:layout_alignLeft="@+id/listed_event_clock_image"
            android:layout_alignStart="@+id/listed_event_clock_image"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/listed_event_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Address"
            android:textColor="#757575"
            android:layout_alignTop="@+id/listed_event_pin_image"
            android:layout_toRightOf="@+id/listed_event_pin_image"
            android:layout_toEndOf="@+id/listed_event_pin_image"
            android:layout_marginRight="20dp"
            android:onClick="searchMap"/>

        <TextView
            android:id="@+id/listed_event_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Distance"
            android:textColor="#757575"
            android:layout_alignTop="@+id/listed_event_address"
            android:layout_toRightOf="@+id/listed_event_address"
            android:layout_toEndOf="@+id/listed_event_address"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/listed_event_clock_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_access_time_black_24dp"
            android:layout_below="@+id/listed_event_description"
            android:layout_alignLeft="@+id/listed_event_description"
            android:layout_alignStart="@+id/listed_event_description"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/listed_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date"
            android:textColor="#757575"
            android:layout_below="@+id/listed_event_description"
            android:layout_toRightOf="@+id/listed_event_clock_image"
            android:layout_toEndOf="@+id/listed_event_clock_image"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/listed_event_people_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_people_black_24dp"
            android:layout_below="@+id/listed_event_pin_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/listed_event_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Participants"
            android:textColor="#757575"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/listed_event_people_image"
            android:layout_toStartOf="@+id/listed_event_people_image"/>

        <TextView
            android:id="@+id/listed_event_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Times"
            android:textColor="#757575"
            android:layout_alignBottom="@+id/listed_event_date"
            android:layout_toRightOf="@+id/listed_event_date"
            android:layout_toEndOf="@+id/listed_event_date"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
