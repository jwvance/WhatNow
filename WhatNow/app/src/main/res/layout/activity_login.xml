            <!--android:textSize="@dimen/login_buttons_text_size"-->
            <!--android:layout_gravity="center"-->
            <!--android:paddingTop="10dp"-->
            <!--android:paddingBottom="10dp" />-->
    </LinearLayout>

</ScrollView>